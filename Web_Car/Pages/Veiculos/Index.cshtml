@page
@model Web_Car.Pages.Veiculos.IndexModel
@{
    ViewData["Title"] = "Cadastro de Veiculos";
}
<h2>@ViewData["Title"]</h2>

<p><a asp-page="Criar">Cadastrar Novo Veiculo</a></p>

<table style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">ID</th>
            <th style="border: 1px solid black; padding: 8px;">Nome</th>
            <th style="border: 1px solid black; padding: 8px;">Modelo</th>
            <th style="border: 1px solid black; padding: 8px;">Marca</th>
            <th style="border: 1px solid black; padding: 8px;">Renavam</th>
            <th style="border: 1px solid black; padding: 8px;">AnoFabric</th>
            <th style="border: 1px solid black; padding: 8px;">AnoModel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model.Veiculos)
        {
            <tr>
                <td style="border: 1px solid black; padding: 8px;">@veiculo.Id</td>
                <td style="border: 1px solid black; padding: 8px;">@veiculo.Descricao</td>
                <td style="border: 1px solid black; padding: 8px;">
                    <a class="btn btn-outline-info" asp-page="/Veiculos/Detalhar" asp-route-id="@veiculo.Id">Detalhar</a>
                    <a class="btn btn-outline-warning" asp-page="/Veiculos/Editar" asp-route-id="@veiculo.Id" style="margin-left: 5px;">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>