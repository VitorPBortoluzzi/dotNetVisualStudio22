@page "{id:int}"
@model Web_Car.Pages.Veiculos.EditModel
@{
    ViewData["Title"] = "Editar Veículo";
}

<h2>Editar Veículo</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Veiculo.Id" />
    <div>
        <label asp-for="Veiculo.Nome"></label>
        <input asp-for="Veiculo.Nome" />
    </div>
    <div>
        <label asp-for="Veiculo.Modelo"></label>
        <input asp-for="Veiculo.Modelo" />
    </div>
    <div>
        <label asp-for="Veiculo.Marca"></label>
        <input asp-for="Veiculo.Marca" />
    </div>
    <div>
        <label asp-for="Veiculo.Renavam"></label>
        <input asp-for="Veiculo.Renavam" />
    </div>
    <div>
        <label asp-for="Veiculo.AnoFabricacao"></label>
        <input asp-for="Veiculo.AnoFabricacao" />
    </div>
    <div>
        <label asp-for="Veiculo.AnoModelo"></label>
        <input asp-for="Veiculo.AnoModelo" />
    </div>
    <div>
        <label>Foto do Veículo (Deixe vazio para manter a atual)</label>
        <input type="file" asp-for="Foto" />
    </div>
    @if (!string.IsNullOrEmpty(Model.Veiculo.FotoPath))
    {
        <div>
            <img src="@Model.Veiculo.FotoPath" alt="Foto atual" style="max-width: 200px;" />
        </div>
    }
    <button type="submit">Salvar</button>
</form>

<p>
    <a asp-page="Index">Voltar para a lista</a>
</p>
