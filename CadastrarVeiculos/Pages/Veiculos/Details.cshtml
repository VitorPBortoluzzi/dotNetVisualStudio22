@page
@model CadastrarVeiculos.Pages.Veiculos.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Veículo";
}

<h2>Detalhes do Veículo</h2>

@if (Model.Veiculo == null)
{
        <div class="alert alert-danger">Veículo não encontrado.</div>
}
else
{
        <div class="card" style="width: 30rem;">
        @if (!string.IsNullOrEmpty(Model.Veiculo.FotoPath))
        {
                    <img src="@Model.Veiculo.FotoPath" class="card-img-top" alt="Foto do veículo" />
        }
            <div class="card-body">
                <h5 class="card-title">@Model.Veiculo.Nome</h5>
                <p class="card-text"><strong>Modelo:</strong> @Model.Veiculo.Modelo</p>
                <p class="card-text"><strong>Marca:</strong> @Model.Veiculo.Marca</p>
                <p class="card-text"><strong>Renavam:</strong> @Model.Veiculo.Renavam</p>
                <p class="card-text"><strong>Ano de Fabricação:</strong> @Model.Veiculo.AnoFabricacao</p>
                <p class="card-text"><strong>Ano do Modelo:</strong> @Model.Veiculo.AnoModelo</p>
                <a asp-page="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
}
