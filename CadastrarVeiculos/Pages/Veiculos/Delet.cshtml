@page
@model CadastrarVeiculos.Pages.Veiculos.DeletModel
@{
    ViewData["Title"] = "Excluir Veículo";
}

<h2>Excluir Veículo</h2>

@if (Model.Veiculo == null)
{
        <div class="alert alert-danger">Veículo não encontrado.</div>
}
else
{
        <div class="alert alert-warning">
            <p>Tem certeza que deseja excluir o veículo <strong>@Model.Veiculo.Nome</strong>?</p>
            <form method="post">
                <input type="hidden" asp-for="Veiculo.Renavam" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
}